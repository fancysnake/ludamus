{
  "name": "theme",
  "version": "4.4.0",
  "description": "",
  "scripts": {
    "start": "npm run dev",
    "build": "npm run build:clean && npm run build:tailwind && npm run build:js",
    "build:clean": "rimraf ../../static/css/dist",
    "build:tailwind": "NODE_ENV=production postcss ./src/index.css -o ../../../../../static/css/output.css --minify",
    "build:js": "mkdir -p ../../../../../static/js/; cp ./src/*.js ../../../../../static/js/",
    "dev:js": "mkdir -p ../../../../../static/js/; for f in ./src/*.js; do ln -sf \"$(pwd)/$f\" ../../../../../static/js/\"$(basename $f)\"; done",
    "dev": "npm run dev:js && NODE_ENV=development postcss ./src/index.css -o ../../../../../static/css/output.css --watch",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-nested": "^7.0.2",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.8.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3"
  }
}
